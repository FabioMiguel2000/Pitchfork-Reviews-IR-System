{
	"add-field-type": [
        {
            "name":"standard_text",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.ClassicTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.TrimFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.ClassicTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.TrimFilterFactory"}
                ]
            }
        },
        {
            "name":"single_words",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.KeywordTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.HyphenatedWordsFilterFactory"},
                    {"class":"solr.KStemFilterFactory"},
                    {"class":"solr.TrimFilterFactory"}
                ]
                
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.KeywordTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.KStemFilterFactory"},
                    {"class":"solr.TrimFilterFactory"}

                ]
                
            }
        },
        {
            "name":"keywords_type",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.KeywordTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.SynonymGraphFilterFactory", "synonyms": "/var/solr/data/reviews/synonyms.txt"},
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.HyphenatedWordsFilterFactory"},
                    {"class":"solr.KStemFilterFactory"},
                    {"class":"solr.TrimFilterFactory"}
                ]
                
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.KeywordTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.KStemFilterFactory"},
                    {"class":"solr.TrimFilterFactory"}

                ]
                
            }
        },
        {
            "name":"free_text",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.ClassicTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.HyphenatedWordsFilterFactory"},
                    {"class":"solr.KStemFilterFactory"},
                    {"class":"solr.TrimFilterFactory"},
                    {"class":"solr.StopFilterFactory", "words":"stopwords.txt", "ignoreCase":"true"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.ClassicTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.HyphenatedWordsFilterFactory"},
                    {"class":"solr.KStemFilterFactory"},
                    {"class":"solr.TrimFilterFactory"},
                    {"class":"solr.StopFilterFactory", "words":"stopwords.txt", "ignoreCase":"true"}
                ]
            }
        },
        {
            "name":"float",
            "class":"solr.FloatPointField"
        }
        ,
        {
            "name":"int",
            "class":"solr.IntPointField"
        }
